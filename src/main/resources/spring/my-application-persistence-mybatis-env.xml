<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Provides the "myBatisDataSource" bean required by the feature -->
	<alias name="applicationDataSource" alias="myBatisDataSource" />
	
	<!-- Uses "myBatisTransactionManager" as the main annotation-driven trasaction manager -->
	<alias name="myBatisTransactionManager" alias="applicationTransactionManager" />
	
</beans>